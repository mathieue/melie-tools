#!/bin/bash
set -e

last_arg="${!#}"

PARAM="\"$1\" ."
command="rgrep -I --exclude-dir='tmp' --exclude-dir='.svn' --exclude-dir='.git' --exclude='*.gz' --exclude='*.dump' --exclude='*.pack.js' --exclude='*.sql' ${PARAM}"
shift
for arg in "$@"; do
	if [ $arg = '-e' ];
	then
		continue 
	fi
	command="${command} | grep \"${arg}\"";
done;

if  [ $last_arg = '-e' ];
then
	command="vim \$(${command} | awk -F\":\" '{print \$1}')"
fi

eval $command
